{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://backend-nextflix-qsxh.onrender.com"
  },
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "ignoreCommand": "echo 'No ignore rules'",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://backend-nextflix-qsxh.onrender.com/:path*"
    }
  ]
}
